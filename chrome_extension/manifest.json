{
  "manifest_version": 3,
  "name": "Spam & Phishing Detector",
  "version": "1.0",
  "description": "Check if a message or URL is spam or phishing.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": ["scripting"],
  "host_permissions": [
    "http://127.0.0.1:5000/"
  ]
}
